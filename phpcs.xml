<?xml version="1.0"?>
<ruleset name="AI Agent for Website">
    <description>WordPress Coding Standards for AI Agent for Website plugin</description>

    <!-- What to scan -->
    <file>.</file>

    <!-- Exclude directories -->
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/node_modules/*</exclude-pattern>
    <exclude-pattern>/build/*</exclude-pattern>
    <exclude-pattern>/tests/*</exclude-pattern>
    <exclude-pattern>/.github/*</exclude-pattern>
    <exclude-pattern>/.phpunit.cache/*</exclude-pattern>

    <!-- How to scan -->
    <arg value="sp"/>
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/>

    <!-- WordPress Coding Standards (includes WordPress-Core and WordPress-Extra) -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
        <!-- Allow non-hyphenated filenames for class files -->
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
    </rule>

    <!-- Verify text domain usage -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="ai-agent-for-website"/>
            </property>
        </properties>
    </rule>

    <!-- Verify correct prefix usage -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="aiagent"/>
                <element value="AIAGENT"/>
                <element value="AI_Agent"/>
            </property>
        </properties>
    </rule>

    <!-- Set minimum supported WordPress version -->
    <config name="minimum_wp_version" value="5.8"/>
</ruleset>
